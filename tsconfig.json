{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "dist",
        "typeRoots": [
            "src/types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}